<div class="container">
  <div class="row">
    <h4 class="m-5 px-4 bg-light">会員一覧</h4>
  </div>

  <div class="row col-md-9 mx-auto">
    <table class="table table-hover table-inverse">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id), class: "link" do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == true %>
                <strong class="text-secondary"><%= customer_status_name(customer) %></strong>
              <% else %>
                <strong class="text-success"><%= customer_status_name(customer) %></strong>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row justify-content-center mb-4">
    <%= paginate @customers %>
  </div>
</div>