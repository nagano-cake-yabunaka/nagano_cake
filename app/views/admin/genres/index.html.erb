<div class="container">
  <div class="row">
    <h4 class="m-4 px-4 bg-light">ジャンル一覧・追加</h4>
  </div>

  <div class="row">
    <%= form_with model: @genre do |f| %>
      <%= f.label "ジャンル名", class: "m-3 mr-4" %>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "m-3 mr-4" %>
      <%= f.submit "新規登録", class: "actions btn btn-success px-4" %>
    <% end %>
  </div>

  <div class="row col-4 mt-4">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <% @genres.each do |genre| %>
          <td><%= genre.name %></td>
        <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>