<div class="container">
  <div class="row">
    <h4 class="m-4 px-4 bg-light">ジャンル一覧・追加</h4>
  </div>

  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <%= f.label "ジャンル名", class: "m-3 mr-4" %>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "m-3 mr-4" %>
      <%= f.submit "新規登録", class: "actions btn btn-success px-4 mx-3" %>
    <% end %>
  </div>

  <div class="row col-md-5 mt-4">
    <table class="table table-hover table-inverse">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success px-3 py-1" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>