<div class="container">
  <div class="row">
    <h4 class="m-4 px-4 bg-light">ジャンル編集</h4>
  </div>

  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path do |f| %>
      <%= f.label "ジャンル名", class: "m-3 mr-4" %>
      <%= f.text_field :name, class: "m-3 mr-4" %>
      <%= f.submit "変更を保存", class: "actions btn btn-success px-4 mx-3" %>
    <% end %>
  </div>
</div>