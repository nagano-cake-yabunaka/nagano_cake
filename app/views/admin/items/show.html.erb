<div class="container">
  <div class="row">
    <h4 class="m-5 px-4 bg-light">商品詳細</h4>
  </div>

  <div class="row">
    <div class="col-4">
      <%= image_tag @item.get_image, class: "col-12 img-responsive img" %>
    </div>
    <div class="col-8 px-auto">
      <div class="row my-3 d-flex justify-content-center align-items-center">
        <div class="col-md-3 text-nowrap pr-0">
          商品名
        </div>
        <div class="col-md-7 pl-0">
          <%= @item.name %>
        </div>
      </div>
      <div class="row my-3 d-flex justify-content-center align-items-center">
        <div class="col-md-3 text-nowrap pr-0">
          商品説明
        </div>
        <div class="col-md-7 pl-0">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row my-3 d-flex justify-content-center align-items-center">
        <div class="col-md-3 text-nowrap pr-0">
          ジャンル
        </div>
        <div class="col-md-7 pl-0">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="row my-3 d-flex justify-content-center align-items-center">
        <div class="col-md-3 text-nowrap pr-0">
          税込価格<br/>
          (税抜価格)
        </div>
        <div class="col-md-7 pl-0">
          <%= (@item.price * 1.1).floor.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円
        </div>
      </div>
      <div class="row my-3 d-flex justify-content-center align-items-center">
        <div class="col-md-3 text-nowrap pr-0">
          販売ステータス
        </div>
        <div class="col-md-7 pl-0">
          <%= form_with model: @item do |f| %>
              <% if @item.is_active == true %>
                <strong class="text-success"><%= admin_item_status_name(@item) %></strong>
               <% else %>
                <strong class="text-secondary"><%= admin_item_status_name(@item) %></strong>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success font-weight-bold px-4 mx-auto py-2 my-3" %>
  </div>
</div>