<div class="container">
  <div class="row">
    <h4 class="m-4 px-4 bg-light">商品一覧</h4>
  </div>

  <div class="row mt-4">
    <table class="table table-hover table-inverse">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>