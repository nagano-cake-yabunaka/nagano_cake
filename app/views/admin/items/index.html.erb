<div class="container">
  <div class="row">
    <h4 class="m-4 px-4 bg-light">商品一覧</h4>
    <div class="d-flex-none ml-auto mt-auto">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus fa-2x text-secondary"></i>
      <% end %>
    </div>
  </div>

  <div class="row mt-4">
    <table class="table table-hover table-inverse">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td><%= item_status_name(item) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row justify-content-center mb-4">
    <%= paginate @items %>
  </div>
</div>