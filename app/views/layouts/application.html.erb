                    </li>
                    <li class="nav-item mr-lg-4 mr-md-2 mr-0">
                      <%= link_to "カート", cart_items_path, class: 'nav-link bg-light text-info text-nowrap rounded-pill' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link bg-light text-info text-nowrap rounded-pill' %>
                    </li>
                  <% elsif admin_signed_in? %>
                    <li class="nav-item mr-lg-4 mr-md-2 mr-0">
                      <%= link_to "商品一覧", admin_items_path, class: 'nav-link bg-light text-info text-nowrap rounded-pill' %>
                    </li>
                    <li class="nav-item mr-lg-4 mr-md-2 mr-0">
