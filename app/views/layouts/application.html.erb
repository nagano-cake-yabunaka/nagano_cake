                      <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link bg-light text-info text-nowrap rounded-pill' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "ログイン", customer_session_path, class: 'nav-link bg-light text-info text-nowrap rounded-pill' %>
                    </li>
                  <% end %>
