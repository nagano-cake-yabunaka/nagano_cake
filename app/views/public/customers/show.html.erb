<div class="container">
  <div class="row">
    <h4 class="m-4 px-4 bg-light">マイページ</h4>
  </div>

  <div class="row my-3">
    <h5 class="col-3 col-md-2 col-lg-1 text-nowrap d-flex align-items-center p-0 m-0"><strong>
      登録情報
    </strong></h5>
    <div class="col">
      <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success px-3 py-1 m-0 ml-5" %>
    </div>
  </div>

  <div class="row my-4">
    <table class="table table-bordered table-hover col-8">
      <tr>
        <th class="bg-light">氏名</th>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="bg-light">カナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="bg-light">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="bg-light">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="bg-light">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="bg-light">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>

  <div class="row my-3">
    <h5 class="col-3 col-md-2 col-lg-1 text-nowrap d-flex align-items-center p-0 m-0"><strong>
      配送先
    </strong></h5>
    <div class="col">
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary px-3 py-1 m-0 ml-5" %>
    </div>
  </div>

  <div class="row my-3">
    <h5 class="col-3 col-md-2 col-lg-1 text-nowrap d-flex align-items-center p-0 m-0"><strong>
      注文履歴
    </strong></h5>
    <div class="col">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary px-3 py-1 m-0 ml-5" %>
    </div>
  </div>
</div>