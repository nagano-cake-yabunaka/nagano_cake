<div class="container">
    <div class="row">
        <h4 class="m-5 px-4 bg-light">注文情報確認</h4>
    </div>

    <div class="row">
        <table class="table table-bordered">
            <thead class="thead-light text-nowrap">
                <tr>
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                </tr>
            </thead>
            <% @sum = 0 %>
            <tbody>
                <% @cart_items.each do |cart_item| %>
                    <tr>
                        <td class="align-middle">
                            <%= image_tag cart_item.item.get_image, class: "img-responsive img col-2 mr-3" %>
                            <%= cart_item.item.name %>
                        </td>
                        <td class="align-middle"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
                        <td class="align-middle"><%= cart_item.amount %></td>
                        <% @sum += cart_item.subtotal %>
                        <td class="align-middle"><%= @sum.to_s(:delimited) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>