<div class="container">
  <div class="row">
    <h4 class="m-5 px-4 bg-light">ショッピングカート</h4>

  </div>

  <div class="row my-4">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image, class: "img-responsive img" %>
              <%= cart_item.item.name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>