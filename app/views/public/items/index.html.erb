<div class="container">
  <div class="row d-flex align-items-end my-4">
    <h3><strong>商品一覧</strong></h3>
    <h6>（全<%= @items.count %>件）</h6>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3 px-2">
        <%= link_to item_path(item.id), class: "text-dark" do %>
          <%= image_tag item.get_image, class: "col-12 img-responsive img" %>
          <p class="mt-3 mb-2 px-2"><%= item.name %></p>
          <p class="mb-2 px-2">¥<%= (item.price * 1.1).floor.to_s(:delimited) %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-center my-5">
    <%= paginate @items %>
  </div>
</div>