<div class="container">
  <h4 class="m-4 px-4 bg-light">新規会員登録</h4>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div class="col">
        <p>名前</p>
        <p>フリガナ</p>
        <p>メールアドレス</p>
        <p>郵便番号(ハイフンなし)</p>
        <p>住所</p>
        <p>電話番号(ハイフンなし)</p>
        <p>パスワード(6文字以上)</p>
        <p>パスワード(確認用)</p>
      </div>
      <div class="col">
        <p>(姓)</p>
        <p>(セイ)</p>
      </div>
      <div class="col">
        <%= f.text_field :last_name, autofocus: true, class: "field" %>
        <%= f.text_field :last_name_kana %>
        <%= f.email_field :email, autocomplete: "email", class: "field" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "field" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field" %>
        <%= f.submit "Sign up", class: "actions" %>
      </div>
    <% end %>
  </div>
  <%= render "public/shared/links" %>
</div>

